<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_vertical"
    android:layout_margin="@dimen/_20sdp"
    android:background="@drawable/bg_round_purewhite"
    android:orientation="vertical"
    android:padding="@dimen/_20sdp">


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvUrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:fontFamily="@font/montserrat_semibold"
        android:singleLine="false"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/_13ssp"
        />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:weightSum="2">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/btnCopy"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_weight="1"
            android:background="@drawable/button_border_enable_grey"
            android:enabled="true"
            android:gravity="center_vertical"
            android:text="Copy"
            android:textAlignment="center"
            android:textColor="@color/gray_4F4F4F"
            android:textSize="@dimen/_14ssp"
            app:fontFamily="@font/montserrat_medium"
            app:layout_constraintCircleRadius="@dimen/_18sdp"
            tools:ignore="RtlCompat"
            tools:targetApi="lollipop" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/btnOpen"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_border_enable_red_fill"
            android:enabled="true"
            android:text="Open"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="@dimen/_14ssp"
            app:fontFamily="@font/montserrat_medium"
            app:layout_constraintVertical_bias="0"
            tools:ignore="RtlCompat"
            tools:targetApi="lollipop" />


    </androidx.appcompat.widget.LinearLayoutCompat>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-6491242549381158/3217489119"
        ads:layout_constraintTop_toBottomOf="@+id/imgQRCode" />

</androidx.appcompat.widget.LinearLayoutCompat>